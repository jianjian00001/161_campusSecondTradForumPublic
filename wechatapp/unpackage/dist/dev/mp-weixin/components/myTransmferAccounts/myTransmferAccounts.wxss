.right-info{
	
	
	display: flex;
	justify-content: right;
	margin-bottom: 10px;
}
.right-info>.zw{
	flex:1;
}
/* 文本类型 */
.right-info>.info{	
	
	position: relative;
	width: 225px;
	height: 75px;
	
	word-wrap:break-word; 
	word-break:break-all;
	position: relative;
	/* min-height: 40px; */
	display: flex;
	align-items: center;
	margin: 0 5px;
	/* background-color: #f99f3e; */
	/* line-height: 40px; */
	border-radius: 5px;
	/* padding: 8px 12px; */
}
.right-info>.info>.money{
	position: absolute;
	font-size: 14px;
	left: 51px;
	top: 10.5px;
	color: #fffffd;
	font-weight: 500;
}
.right-info>.info>image{
	width: 100%;
}
.right-info>.avatar{
	width: 30px;
	height: 30px;
	border-radius: 5px;
}
.left-info{
	display: flex;
	justify-content: left;
	margin-bottom: 10px;
}
.left-info>.info{
	max-width: 230px;
	word-wrap:break-word; 
	word-break:break-all;
	position: relative;
	/* min-height: 40px; */
	display: flex;
	align-items: center;
	margin: 0 10px;
	/* background-color: #f99f3e; */
	/* line-height: 40px; */
	border-radius: 5px;
	/* padding: 8px 12px; */
}
.left-info>.info>.money{
	position: absolute;
	font-size: 14px;
	left: 57px;
	top: 12px;
	color: #fffffd;
	font-weight: 500;
}
/* 文字和布局结束 */
/* 头像开始 */
.avatar{
	width: 30px;
	height: 30px;
	border-radius: 5px;
}
.avatar>image{
	
	width: 30px;
	height: 30px;
	border-radius: 5px;
}
/* 头像结束 */
/* 三角形 */
.right-sjx{
	
	position: absolute;
	right: -5px;
	top: 12px;
	width: 0;
	height: 0;
	border-top: 8px solid transparent;
	border-bottom: 8px solid transparent;
	border-left: 10px solid #f99f3e;
}
.left-sjx{
	position: absolute;
	left: -5px;
	top: 12px;
	width: 0;
	height: 0;
	border-top: 8px solid transparent;
	border-bottom: 8px solid transparent;
	border-right: 10px solid #f99f3e;
}
/* 三角形结束 */


