
.top{
	
	position: fixed;
	z-index: 999;
	top:-1px;
	box-sizing: border-box;
	width: 100vw;
	height: 100rpx;
	background-color: white;
	padding: 0 10px;
	display: flex;
	box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 1px 3px 1px;
}
.top > .left{
	flex: 1;
	display: flex;
	justify-content: space-around;
	align-items: center;
	font-family: 600;
}
.top >.right{
	width: 50%;
	display: flex;
	align-items: center;
}
.top >.right >.search{
	padding-left: 10px;
}
.active{
	border-style: solid;
	border-width: 0 0 4rpx 0;
	border-color: #f9c347;
	position: relative;
	border-radius: 5px;
	top: 4px;
	width: 90%;
	left: 5%;
	box-shadow: 0 0 1px 1px  #f9c347;
}
 

