



























































	/* 布局 */
.day-active{
	width: 100%;
	
	min-height: 100px;
}
.day-active{
	z-index: 1;
	position: relative;
}
/*头部 */
.day-active > .head{
	width: 33%;
	height: 60rpx;
	background-color: #fed23e;
	position: absolute;
	left: 50%;
	z-index: 0;
	-webkit-transform: translate(-50%,-50%);
	        transform: translate(-50%,-50%);
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 5px;
	overflow:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  -o-text-overflow:ellipsis;
}
/* 图片 */
.image-show image{
	width: 100%;
	height: 300rpx;
	border-radius:  10px 10px 0 0;
}
.active-warp{
	margin: 0 20rpx;
}
.text-show{
	padding: 20px 0;
}
.foot-show{
	padding-bottom: 10px;
}
.foot-show .item {

	display: flex;
	align-items: center;
	margin-left: 1px;
}


